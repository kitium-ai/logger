{
  "name": "@kitiumai/logger",
  "version": "1.0.0",
  "type": "module",
  "description": "Enterprise-ready centralized logging system with Loki integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/express-middleware.d.ts",
      "import": "./dist/middleware/express-middleware.js",
      "require": "./dist/middleware/express-middleware.js",
      "default": "./dist/middleware/express-middleware.js"
    },
    "./utils": {
      "types": "./dist/utils/logger-utils.d.ts",
      "import": "./dist/utils/logger-utils.js",
      "require": "./dist/utils/logger-utils.js",
      "default": "./dist/utils/logger-utils.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitiumai/logger.git"
  },
  "homepage": "https://github.com/kitiumai/logger#readme",
  "bugs": {
    "url": "https://github.com/kitiumai/logger/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "setup:lint": "node node_modules/@kitiumai/lint/scripts/postinstall.js",
    "lint:fix": "eslint . --fix",
    "lint:tslint": "tslint -c tslint.json --project tsconfig.json '**/*.ts'",
    "lint:tslint:fix": "tslint -c tslint.json --project tsconfig.json --fix '**/*.ts'",
    "format:check": "prettier --check .",
    "migrate": "node scripts/migrate.js",
    "migrate:help": "node scripts/migrate.js --help"
  },
  "keywords": [
    "logging",
    "structured-logging",
    "loki",
    "centralized",
    "winston",
    "observability",
    "kitium",
    "logger",
    "typescript",
    "nodejs",
    "kitiumai"
  ],
  "author": "Kitium AI",
  "license": "MIT",
  "dependencies": {
    "@kitiumai/lint": "^1.2.6",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "winston-loki": "^6.1.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "graphql": "^16.8.0"
  }
}
