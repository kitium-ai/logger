# Application Environment
NODE_ENV=development
PORT=3000
SERVICE_NAME=my-service

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs
LOG_MAX_FILE_SIZE=100m
LOG_MAX_FILES=14
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_META=true

# Loki Configuration
LOKI_ENABLED=true
LOKI_HOST=localhost
LOKI_PORT=3100
LOKI_PROTOCOL=http
LOKI_BATCH_SIZE=100
LOKI_INTERVAL=5000
LOKI_TIMEOUT=10000

# Optional: Loki Authentication (if using Grafana Cloud or secured Loki)
# LOKI_USERNAME=your-username
# LOKI_PASSWORD=your-password

# Optional: Custom Loki Labels (JSON or key=value format)
# LOKI_LABELS={"region":"us-east-1","datacenter":"dc1"}
# or
# LOKI_LABELS=region=us-east-1,datacenter=dc1
